{
  "compilerOptions": {
    "outDir": "app/",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["vite/client"],
    "paths": {
      "~style/*": ["./src/styles/*"]
    }
  },
  "include": [
    "./src"
  ]
}